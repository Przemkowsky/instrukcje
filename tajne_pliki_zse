<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
</head>
<body>

<script>

// zielony tekst + duża czcionka
document.write("<div style='color: green; font-size: 72px;'>");

// pobranie a, b, c
var a_gal = parseFloat(prompt("Podaj a:"));
var b_gal = parseFloat(prompt("Podaj b:"));
var c_gal = parseFloat(prompt("Podaj c:"));

// wzór
document.write("f(x) = " + a_gal + "x² + " + b_gal + "x + " + c_gal + "<br><br>");

// delta
var delta_gal = b_gal*b_gal - 4*a_gal*c_gal;
document.write("Delta = " + delta_gal + "<br>");

// miejsca zerowe
if(delta_gal > 0){
    var x1_gal = (-b_gal - Math.sqrt(delta_gal)) / (2*a_gal);
    var x2_gal = (-b_gal + Math.sqrt(delta_gal)) / (2*a_gal);
    document.write("x1 = " + x1_gal + "<br>");
    document.write("x2 = " + x2_gal + "<br>");
}
else if(delta_gal == 0){
    var x0_gal = -b_gal / (2*a_gal);
    document.write("x0 = " + x0_gal + "<br>");
}
else{
    document.write("Brak miejsc zerowych<br>");
}

// wierzchołek
var p_gal = -b_gal / (2*a_gal);
var q_gal = -delta_gal / (4*a_gal);

document.write("<br>Wierzcholek: (" + p_gal + ", " + q_gal + ")<br>");

// monotoniczność
if(a_gal > 0){
    document.write("Maleje: (-∞ , " + p_gal + "]<br>");
    document.write("Rosnie: [" + p_gal + " , ∞)<br>");
}
else{
    document.write("Rosnie: (-∞ , " + p_gal + "]<br>");
    document.write("Maleje: [" + p_gal + " , ∞)<br>");
}

// f(10)
var f10_gal = a_gal*10*10 + b_gal*10 + c_gal;
document.write("<br>f(10) = " + f10_gal + "<br>");

// postać kanoniczna
document.write("<br>Postac kanoniczna: " + a_gal + "(x - " + p_gal + ")² + " + q_gal + "<br>");

// postać iloczynowa
if(delta_gal > 0){
    document.write("Postac iloczynowa: " + a_gal + "(x - " + x1_gal + ")(x - " + x2_gal + ")<br>");
}
else if(delta_gal == 0){
    document.write("Postac iloczynowa: " + a_gal + "(x - " + x0_gal + ")²<br>");
}
else{
    document.write("Postac iloczynowa: brak<br>");
}

document.write("</div>");

</script>

</body>
</html>